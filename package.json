{
  "name": "fael.tech",
  "version": "0.2.1",
  "description": "My personal web page project.",
  "main": "index.js",
  "scripts": {
    "//CLEANING----------------//": " --- CLEANING --- ",
    "clean:public": "rimraf public",
    "clean:temp": "rimraf temp",
    "clean:transpiled": "rimraf transpiled",
    "clean": "npm-run-all clean:temp clean:transpiled clean:public",
    "//SERVING-----------------//": " --- SERVING --- ",
    "watch:sass": "node-sass sass/main.scss style.css -w",
    "serve": "live-server",
    "start": "npm-run-all --parallel serve watch:sass",
    "//PREPARING---------------//": " --- PREPARING STRUCTURE --- ",
    "mkdirs": "mkdir -p public/js && mkdir -p public/css",
    "windows:mkdirs": "mkdirp temp/ transpiled/ public/img public/fonts public/about",
    "windows:copy:img": "copy .\\img\\* .\\public\\img\\",
    "windows:copy:icons": "copy .\\icons\\fonts\\* .\\public\\fonts\\",
    "windows:copy:particles": "copy \"particles.json\" .\\public\\",
    "windows:copy:favicon": "copy \"favicon.png\" .\\public\\",
    "windows:copy:license": "copy \"LICENSE\" .\\public\\",
    "windows:copy:readme": "copy \"README.md\" .\\public\\",
    "windows:prepare": "npm-run-all clean windows:mkdirs windows:copy:*",
    "//JAVASCRIPT--------------//": " --- TRANSPILING SCRIPTS --- ",
    "transpile:app": "babel app.js --out-file transpiled/app.transpiled.js --presets=@babel/preset-env",
    "transpile:vendors": "babel vendors/tilt.js --out-file transpiled/vendors.transpiled.js --presets=@babel/preset-env",
    "transpile:js": "npm-run-all transpile:vendors transpile:app",
    "//CSS---------------------//": " --- COMPILE SASS TO CSS --- ",
    "compile:sass": "node-sass sass/main.scss temp/style.comp.css",
    "concat:css": "concat -o temp/style.concat.css icons/fontawesome.css icons/solid.css icons/brands.css temp/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' temp/style.concat.css -o temp/style.prefix.css",
    "windows:prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" temp/style.concat.css -o temp/style.prefix.css",
    "compile:css": "node-sass temp/style.prefix.css style.css",
    "compile:css:compress": "node-sass temp/style.prefix.css style.css --output-style compressed",
    "//HTML--------------------//": " --- COPY HTML FILES --- ",
    "html:home": "copy \"index.html\" .\\public\\",
    "html:about": "copy .\\about\\* .\\public\\about\\",
    "insert:html": "npm-run-all html:*",
    "//BUILD-DEV---------------//": " --- BUILD (DEVELOPMENT) --- ",
    "windows:copy:css:dev": "copy \"style.css\" .\\public\\",
    "build:css:dev": "npm-run-all compile:sass concat:css windows:prefix:css compile:css windows:copy:css:dev clean:temp",
    "uglify:app:dev": "uglifyjs ./transpiled/app.transpiled.js -b -o public/index.js",
    "uglify:vendors:dev": "uglifyjs ./vendors/particles.js ./transpiled/vendors.transpiled.js -b -o public/vendors.js",
    "build:js:dev": "npm-run-all transpile:js uglify:vendors:dev uglify:app:dev clean:transpiled",
    "build:dev": "npm-run-all build:css:dev build:js:dev insert:html",
    "//BUILD-PROD--------------//": " --- BUILD (PRODUCTION) --- ",
    "build:css:prod": "npm-run-all compile:sass concat:css windows:prefix:css compile:css:compress",
    "//TEST--------------------//": " --- TESTING --- ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faelplg/fael.tech.git"
  },
  "keywords": [],
  "author": "Rafael Goulart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/faelplg/fael.tech/issues"
  },
  "homepage": "https://github.com/faelplg/fael.tech#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "autoprefixer": "^9.7.4",
    "concat": "^1.0.3",
    "minimist": ">=1.2.2",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "uglify-js": "^3.8.1"
  },
  "dependencies": {},
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "preinstall": "npx npm-force-resolutions"
}
